<view class="page" data-weui-theme="{{theme}}">
  <mp-form-page > 
    <mp-form  id="form" rules="{{rules}}" models="{{formData}}">
      <mp-cell show-error prop="name" title="微信号" ext-class="">
        <input bindinput="formInputChange" data-field="name" name="name" class="weui-input" placeholder="请输入能添加的微信号" />
      </mp-cell>
      <!-- <mp-cell prop="qq" title="qq" ext-class="">
